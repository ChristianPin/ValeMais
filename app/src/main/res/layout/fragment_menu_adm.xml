<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adm.fragment.MenuAdmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="468dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProduto"
            android:layout_width="303dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <ImageView
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_bags" />

            <TextView
                android:id="@+id/textViewComprasSolicitadas"
                android:layout_width="224dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Produto"
                android:textColor="@color/pretob"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewShopping"
            android:layout_width="303dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_shopp" />

            <TextView
                android:id="@+id/textQtde"
                android:layout_width="218dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Shopping"
                android:textColor="@color/pretob"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewIndicacao"
            android:layout_width="303dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_indicacoes" />

            <TextView
                android:id="@+id/textInd"
                android:layout_width="218dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Indicações"
                android:textColor="@color/pretob"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>