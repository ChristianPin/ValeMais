<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backcadp"
    tools:context=".adm.fragment.AdmCadIndicacaoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="360dp"
                android:layout_height="450dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="300dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Escolher imagem" />


                <EditText
                    android:id="@+id/addNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textColor="@color/preta"
                    app:theme="@style/StyledTilEditTextTheme" />

                <EditText
                    android:id="@+id/addDesc"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:inputType="textMultiLine|textPersonName"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Descrição"
                    android:gravity="start"
                    android:background="@drawable/edit_text_redondo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="380dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCadastrar"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="185dp"
                        android:layout_height="42dp"
                        android:background="@drawable/btn_cadp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Cadastrar indicação"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/branca"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnCancelar"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="120dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn_exc"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Cancelar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/branca"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>