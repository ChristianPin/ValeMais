<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adm.fragment.MenuAdmProdutoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCatalogoProdutos"
            android:layout_width="303dp"
            android:layout_height="166dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <ImageView
                android:layout_width="133dp"
                android:layout_height="160dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_compras" />

            <TextView
                android:id="@+id/textViewComprasSolicitadas"
                android:layout_width="224dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="88dp"
                android:fontFamily="@font/poppins_medium"
                android:text="CatÃ¡logo de produtos"
                android:textColor="@color/pretob"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCadProduto"
            android:layout_width="303dp"
            android:layout_height="166dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="132dp"
                android:layout_height="159dp"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_produto_dispo" />

            <TextView
                android:id="@+id/textQtde"
                android:layout_width="218dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Cadastrar produto"
                android:textColor="@color/pretob"
                android:textSize="15sp" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>