<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cliente.fragment.DetalhesProdutoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/alegreyalight"
                android:gravity="center"
                android:textStyle="bold"
                android:hint="Nome do produto"
                android:textColor="@color/preta"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:srcCompat="@tools:sample/avatars[6]" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txTam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Tamanho: "
                    android:textColor="@color/pretob"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="tam"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textColor="@color/preta"
                    android:textStyle="bold"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txQtde"
                    android:layout_width="104dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Quantidade"
                    android:textColor="@color/pretob"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnMais"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="+" />

                <TextView
                    android:id="@+id/textQtde"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/preta"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnMenos"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textSize="23sp"
                    android:gravity="center"
                    android:text="-" />


            </LinearLayout>

            <TextView
                android:id="@+id/textDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreyalight"
                android:text="Descrição"
                android:textColor="@color/preta"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/linha2"
                android:layout_width="151dp"
                android:layout_height="2dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                app:srcCompat="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comfortaalight"
                android:hint="Descrição do produto"
                android:textColor="@color/preta"
                android:textSize="19sp" />


            <Button
                android:id="@+id/btnCar"
                android:layout_width="215dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/botaocad"
                android:fontFamily="@font/poppins_medium"
                android:text="Adicionar ao carrinho"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>