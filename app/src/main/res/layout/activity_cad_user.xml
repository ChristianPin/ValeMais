<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:orientation="vertical"
    tools:context=".CadUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="627dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnVoltar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon_seta">

            </ImageView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#1f1d1d">

                <TextView
                    android:id="@+id/textCad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/alegreyalight"
                    android:gravity="center"
                    android:text="Cadastro do usuÃ¡rio"
                    android:textColor="@color/branca"
                    android:textSize="30sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="360dp"
                android:layout_height="478dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F9F9F9"
                        app:cardCornerRadius="20dp">

                        <ImageView

                            android:id="@+id/imageView6"
                            android:layout_width="408dp"
                            android:layout_height="59dp"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_background"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_background_menor" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circleImageView"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="24dp" />

                        <Button
                            android:id="@+id/btnUpload"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="@drawable/btncircle"
                            android:text="Escolher imagem" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <EditText
                    android:id="@+id/addNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textColor="@color/preta"
                    app:theme="@style/StyledTilEditTextTheme" />

                <EditText
                    android:id="@+id/addCpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="CPF"
                    android:inputType="number"
                    android:textColor="@color/preta"
                    app:theme="@style/StyledTilEditTextTheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addTel"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="6"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Telefone"
                        android:inputType="number"
                        android:textColor="@color/preta"
                        app:theme="@style/StyledTilEditTextTheme" />

                    <EditText
                        android:id="@+id/addNasc"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="6"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Data de nascimento"
                        android:inputType="date"
                        android:textColor="@color/preta"
                        app:theme="@style/StyledTilEditTextTheme" />

                </LinearLayout>

                <EditText
                    android:id="@+id/addEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/preta"
                    app:theme="@style/StyledTilEditTextTheme" />

                <EditText
                    android:id="@+id/addSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="340dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textColor="@color/preta"
                    app:theme="@style/StyledTilEditTextTheme" />

                <Button
                    android:id="@+id/btnCadastrar"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="205dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="185dp"
                    android:background="@drawable/botaocad"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Cadastrar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/branca"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>