<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backcadp"
    tools:context=".adm.fragment.AdmCadProdutoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="360dp"
                android:layout_height="397dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btncircle"
                    android:text="Escolher imagem" />


                <EditText
                    android:id="@+id/addNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textColor="@color/preta"
                    app:theme="@style/StyledTilEditTextTheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addTam"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="6"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Tamanho"
                        android:inputType="textPersonName"
                        android:textColor="@color/preta"
                        app:theme="@style/StyledTilEditTextTheme" />

                    <EditText
                        android:id="@+id/addQtde"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="6"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Quantidade"
                        android:inputType="number"
                        android:textColor="@color/preta"
                        app:theme="@style/StyledTilEditTextTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addValor"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:ems="6"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Valor"
                        android:inputType="numberDecimal"
                        android:textColor="@color/preta"
                        app:theme="@style/StyledTilEditTextTheme" />

                    <Spinner
                        android:id="@+id/spinnerCat"
                        android:layout_width="190dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/preta" />

                </LinearLayout>

                <EditText
                    android:id="@+id/addDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Descrição"
                    android:inputType="textPersonName"
                    app:theme="@style/StyledTilEditTextTheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="340dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCadastrar"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="185dp"
                        android:layout_height="42dp"
                        android:background="@drawable/btn_cadp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Cadastrar produto"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/branca"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnCancelar"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="120dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn_exc"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Cancelar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/branca"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>