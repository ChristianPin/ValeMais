<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cliente.activity.ComunidadeValeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDetalhes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/alegreyalight"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Comunidade Vale+"
                android:textColor="@color/preta"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/sobre"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/alegreyalight"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="Seja bem vinde a Comunidade Vale+!"
                android:textColor="@color/preta"
                android:textSize="22sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_keep" />

            <TextView
                android:id="@+id/sobre2"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/comfortaalight"
                android:gravity="center"
                android:paddingTop="8dp"
                android:textStyle="normal"
                android:text="Aqui você encontra indicações babadeiras de séries voltadas a temática LGBTQ+. Vamos consumir cada vez mais conteúdo do vale para apoiar a comunidade!"
                android:textColor="@color/preta"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F9F9F9">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="20dp"
                    android:text="Séries"
                    android:textColor="@color/quantum"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btnSerie"
                    android:layout_width="19dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="350dp"
                    app:srcCompat="@drawable/ic_seta" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>