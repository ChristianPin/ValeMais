<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cliente.fragment.MenuProdutoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alegreyalight"
            android:gravity="center"
            android:text="Produtos"
            android:textColor="@color/preta"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnRoupas"
            android:layout_width="295dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">


            <ImageView
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_roupas" />

            <TextView
                android:id="@+id/textR"
                android:layout_width="224dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Roupas"
                android:textColor="@color/pretob"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAcessorios"
            android:layout_width="295dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="132dp"
                android:layout_height="159dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="25dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_acessorios" />

            <TextView
                android:id="@+id/textA"
                android:layout_width="218dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"
                android:fontFamily="@font/poppins_medium"
                android:text="AcessÃ³rios"
