<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9F9F9"
    android:layout_height="match_parent"
    tools:context=".cliente.fragment.AjustesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_usuario"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                tools:srcCompat="@tools:sample/avatars[4]" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nome_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="48dp"
                    android:hint="Nome do usuário"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/quantum"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/email_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Email do usuário"
                    android:textColor="@color/quantum"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="#F9F9F9">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="20dp"
                android:text="Editar perfil"
                android:textColor="@color/quantum"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnEditarPerfil"
                android:layout_width="19dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="350dp"
                app:srcCompat="@drawable/ic_seta" />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/btnCompras"
                android:layout_height="52dp"
                android:backgroundTint="#90EE90">

                <TextView
                    android:id="@+id/compra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Minhas compras"
                    android:textColor="@color/preta"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/btnChat"
            android:layout_height="52dp"
            android:backgroundTint="#5FDAF2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Chat"
                android:textColor="@color/preta"
                android:textSize="16sp" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:src="@drawable/men"
                android:layout_gravity="end"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/btnComunidade"
            android:layout_height="52dp"
            android:backgroundTint="#DA70D6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Comunidade Vale+"
                android:textColor="@color/preta"
                android:textSize="16sp" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gif_vale"
                android:layout_gravity="end"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/btnExcluir"
            android:layout_height="52dp"
            android:backgroundTint="#FA8072">

            <TextView
                android:id="@+id/exc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Excluir conta"
                android:textColor="@color/preta"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSair"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="#B22222">

            <TextView
                android:id="@+id/sair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Sair"
                android:textColor="@color/branca"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>